# Security for uploads directory
# Prevent execution of scripts in uploads folder

# Deny access to PHP and other executable files
<Files ~ "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order Allow,Deny
    Deny from all
</Files>

# Only allow image files
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Prevent directory browsing
Options -Indexes

# Prevent hotlinking - SECURE VERSION
RewriteEngine on

# Allow requests from same server (same HTTP_HOST)
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://%{HTTP_HOST} [NC]

# Block external hotlinking, allow internal requests
RewriteRule \.(jpg|jpeg|png|gif)$ - [NC,F,L]